pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    docker.image('maven:3.9.0').inside {
                        sh 'mvn -B -DskipTests clean package'
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    docker.image('maven:3.9.0').inside {
                        sh 'mvn test'
                    }
                }
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    try {
                        sh './jenkins/scripts/deliver.sh'
                    } catch (Exception e) {
                        echo "Rolling back due to error: ${e.message}"
                        // Add rollback steps here
                    }
                }
            }
        }
    }
}

// Add the following block to the existing Jenkinsfile
stage('Run Java Application') {
    steps {
        script {
            try {
                // Assuming your bash script is in the same directory as the Jenkinsfile
                sh './jenkins/scripts/your-bash-script.sh'
            } catch (Exception e) {
                echo "Error running Java application: ${e.message}"
                // Handle the error, add rollback steps if needed
            }
        }
    }
}
