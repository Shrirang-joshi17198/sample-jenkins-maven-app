pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Define Docker configuration within the script block
                    docker.image('maven:3.9.0').inside {
                        sh 'mvn -B -DskipTests clean package'
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    // Run tests inside the same Docker container
                    docker.image('maven:3.9.0').inside {
                        sh 'mvn test'
                    }
                }
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    try {
                        // Run deliver script inside the same Docker container
                        sh './jenkins/scripts/deliver.sh'
                    } catch (Exception e) {
                        echo "Rolling back due to error: ${e.message}"
                        
                        // Example rollback steps (replace with your specific rollback logic)
                        sh './jenkins/scripts/rollback.sh'  // Rollback script to revert changes
                        
                        // Additional rollback steps (replace with your specific logic)
                        // Example: Stop services
                        sh 'docker-compose -f docker-compose.yml down'
                        
                        // Example: Restore a database backup
                        sh 'pg_restore -U postgres -d my_database /path/to/backup.sql'
                    }
                }
            }
        }
    }
}

// Additional post section to clean up resources after the pipeline run
post {
    always {
        // Clean up workspace
        deleteDir()
    }
}
